@import 'nib'
@import 'settings'
@import 'mixins'
@import 'core'
@import 'clockFace'


frame-width = 30%


.frame
  font-family 'Montserrat', sans-serif
  font-size 120%
  line-height 1.6em
  display inline-block
  width frame-width
  box-sizing border-box
  min-height 100%
  height 100%
  position fixed
  top 0px
  left 0px
  border-right 1px solid col1

  & > div 
    padding 1em 2em 2em
    
  .intro
    background-color col1
    color #fff
    padding-top 2em


.docs
  box-sizing border-box
  font-size 200%
  padding 1em
  position relative
  top 0px
  left frame-width
  width (100% - frame-width)

