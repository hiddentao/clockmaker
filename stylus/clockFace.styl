/**
 * Taken from http://www.javascriptkit.com/dhtmltutors/css3clock.shtml
 */

.clock
  
  /* Outer clock face */
  .outer_face
    position relative
    width clockSize
    height clockSize
    border-radius clockSize
    background transparent
    box-shadow inset 0 0 10px gray
    border 14px solid black

    &.show_markers
      &:before, &:after, .marker
        content ""
        position absolute
        width 10px
        height 100%
        background black
        z-index 0
        left 50%
        margin-left -5px
        top 0

      /* 9-3 time marker specifically*/
      &:after 
        transform rotate(90deg)

      & .marker 
        background gray
        width 8px
        margin-left -4px

        &.oneseven
          transform rotate(30deg)

        &.twoeight
          transform rotate(60deg)

        &.fourten
          transform rotate(120deg)

        &.fiveeleven
          transform rotate(150deg)

  /* Inner clock face */
  .inner_face
    position relative
    width 88%
    height 88%
    background body-bg-color
    -moz-border-radius 1000px
    -webkit-border-radius 1000px
    border-radius 1000px
    z-index 1000
    left 6% /* center DIV horizontally (100%-88% / 2) */
    top 6% /* center DIV vertically (100%-88% / 2) */
  

    /* clock center dot small */
    &:before 
      content ""
      width 18px
      height 18px
      border-radius 18px
      margin-left -9px
      margin-top -9px
      background black
      position absolute
      top 50%
      left 50%
      box-shadow 0 0 30px gray
  
      

header
  .clock
    .outer_face
      .marker
        background header-fg-color
    .inner_face
      background header-bg-color

